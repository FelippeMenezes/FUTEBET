<h1>Matches#index</h1>
<p>Find me in app/views/matches/index.html.erb</p>

<div style="flex: 1; padding: 10px;">
  <h2>Times criados pelo sistema</h2>
  <div style="display: flex; flex-wrap: wrap;">
    <% if @teams.present? %>
      <%= form_with url: matches_path, method: :post do %>
        <div>
          <label for="home_team">Selecione o time criado pelo usuário (Home Team):</label>
          <select name="home_team_id" id="home_team">
            <% @teams.select { |team| team.created_by_user? }.each do |team| %>
              <option value="<%= team.id %>"><%= team.name %></option>
            <% end %>
          </select>
        </div>
        <div>
          <label for="away_team">Selecione o time criado pelo sistema (Away Team):</label>
          <select name="away_team_id" id="away_team">
            <% @teams.reject { |team| team.created_by_user? }.each do |team| %>
              <option value="<%= team.id %>"><%= team.name %></option>
            <% end %>
          </select>
        </div>
        <div>
          <%= submit_tag "Criar Partida" %>
        </div>
      <% end %>
    <% else %>
      <div style="flex: 1 0 100%; padding: 10px; box-sizing: border-box;">
        Nenhum time disponível.
      </div>
    <% end %>
  </div>
</div>